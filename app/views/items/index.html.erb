<h1> All items </h1>

<div class="row">
  <% @items.each do |item| %>
    <div class="col-lg-3 col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to item.name, "/items/#{item.id}", class: "text-decoration-none" %>
          </h4>
        </div>
      </div>
    </div>
  <% end %>