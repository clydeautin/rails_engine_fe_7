<h1 class="my-4">Merchants</h1>

<div class="row">
  <% @merchants.each do |merchant| %>
    <div class="col-lg-3 col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to merchant.name, "/merchants/#{merchant.id}", class: "text-decoration-none" %>
          </h4>
        </div>
      </div>
    </div>
  <% end %>
</div>